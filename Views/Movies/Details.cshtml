@model Vidly.Models.Movie
@{
    ViewData["Title"] = @Model.Name;
}

<h2>@Model.Name</h2>


<ul>
    <li>Membership Type: @Model.Genre?.Name</li>
    @if (Model.ReleaseDate != null)
    {
        <li>Release Date: @Model.ReleaseDate</li>
    }
    @if (Model.DateAdded != null)
    {
            <li>Release Date: @Model.DateAdded</li>
    }
    <li>Number in Stock: @Model.NumberInStock</li>
</ul>